generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlserver"
  url      = env("AZURESQL_URL")
}

model User {
  id        String   @id @default(dbgenerated("newid()"), map: "DF_User_id") @db.UniqueIdentifier
  name      String   @db.NVarChar(200)
  username  String   @unique @db.NVarChar(100)
  email     String   @unique @db.NVarChar(255)
  password  String   @db.NVarChar(255)
  avatar    String   @db.NVarChar(255)
  createdAt DateTime @default(dbgenerated("sysutcdatetime()"), map: "DF_User_createdAt")
  updatedAt DateTime @default(dbgenerated("sysutcdatetime()"), map: "DF_User_updatedAt") @updatedAt

  @@index([email], map: "idx_user_email")
  @@index([username], map: "idx_user_username")
}

